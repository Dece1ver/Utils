<Window x:Class="NCToolTable.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NCToolTable"
        mc:Ignorable="d"
        Title="Инструментоискатель 3000" Height="240" Width="480" Loaded="Window_Loaded" Visibility="Visible" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="statusTB"/>
            </StatusBarItem>
        </StatusBar>
        <Button DockPanel.Dock="Bottom" Height="25" Content="Выбрать вручную" Click="BrowseButton_Click"/>
        <Button DockPanel.Dock="Bottom" Height="25" Content="Прочитать выбранное" Click="ReadButton_Click"/>
        <ListView x:Name="windowsLV" BorderBrush="{x:Null}"/>
    </DockPanel>
</Window>
